{{#each gamestate as |gamestate|}}
<section id={{gamestate.user.name}} class="game-board">
    <h3>{{gamestate.user.name}}</h3>
    <p id="cities">Cities: {{gamestate.cities}}</p>
    <p>Developments: {{> developments}}</p>
    <p>Monuments: {{> monuments}}</p>
    <p>Goods: {{> goods}}</p>
    <p class="disasters">Disasters: {{gamestate.disasters}}</p>
    <p class="score">Score: {{gamestate.score}}</p>
</section>
{{/each}}
<aside id="dice-tray">
    <div class = "container" id="1"></div>
    <div class = "container" id="2"></div>
    <div class = "container" id="3"></div>
    <div class = "container" class = "none" id="4"></div>
    <div class = "container" class = "none" id="5"></div>
    <div class = "container" class = "none" id="6"></div>
    <div class = "container" class = "none" id="7"></div>
</aside>
<aside class="quick-reference">
    <div>
        <h4>Order of Play</h4>
        <p>1. Roll dice and collect goods and food.</p>
        <p>2. Feed cities and resolve disasters.</p>
        <p>3. Build cities and/or monuments.</p>
        <p>4. May buy a development.</p>
        <p>5. Discard goods in excess of 6.</p>
    </div>
    <div>
        <h4>Diasters</h4>
        <p>No food - 1 per city unfed</p>
        <p>1 skull - No effect</p>
        <p>2 skulls - 2 unless have Irrigation</p>
        <p>3 skulls - 3 for opponent unless have Medicine</p>
        <p>4 skulls - 4 unless have Great Wall</p>
        <p>5+ skulls - Lose all goods unless have Religion and then opponents lose all goods</p>
    </div>
    <div>
        <h4>Game End</h4>
        <p>All monuments are built or</p>
        <p>One player has 5 developments</p>
    </div>
</aside>